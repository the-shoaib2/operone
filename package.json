{
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "name": "operone",
  "version": "0.1.0",
  "description": "Operone - AI integrated desktop application",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:watch": "vitest watch"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "12.5.0",
    "zod": "^3.23.8"
  }
}